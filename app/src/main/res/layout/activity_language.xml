<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.loginmodule.LanguageActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_170sdp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_building" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_50sdp"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/eway_alert_logo" />


                <ImageView
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/truck_logo" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/white_top_rounded_corner">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/proxima_nova_alt_bold"
                            android:padding="@dimen/_10sdp"
                            android:text="@string/select_your_language"
                            android:textColor="@color/green"
                            android:textSize="@dimen/_20sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@color/green" />
                    </LinearLayout>


                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical">

                     <ScrollView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginBottom="@dimen/_20sdp">

                         <LinearLayout
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:orientation="vertical"
                             >



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/_5sdp">

                            <RelativeLayout
                                android:id="@+id/english_relative"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/green">

                                <RelativeLayout
                                    android:id="@+id/english_img_relative"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_alignParentEnd="true">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_baseline_check_24" />
                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/english_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_centerInParent="true"
                                    android:textSize="@dimen/_14sdp"
                                    android:textColor="@color/White"
                                    android:text="@string/english"
                                    android:fontFamily="@font/proxima_nova_alt_bold"/>

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/_5sdp">

                            <RelativeLayout
                                android:id="@+id/hindi_relative"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/light_white">

                                <RelativeLayout
                                    android:id="@+id/hindi_img_relative"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_alignParentEnd="true"
                                    android:visibility="gone">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_baseline_check_24" />
                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/hindi_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_centerInParent="true"
                                    android:textSize="@dimen/_14sdp"
                                    android:textColor="@color/black"
                                    android:text="@string/hindi"
                                    android:fontFamily="@font/proxima_nova_alt_bold"/>

                            </RelativeLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/_5sdp">

                            <RelativeLayout
                                android:id="@+id/punjabi_relative"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/light_white">

                                <RelativeLayout
                                    android:id="@+id/punjabi_img_relative"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_alignParentEnd="true"
                                    android:visibility="gone">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_baseline_check_24" />
                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/punjabi_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:fontFamily="@font/proxima_nova_alt_bold"
                                    android:gravity="center"
                                    android:text="@string/punjabi"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/_5sdp">

                            <RelativeLayout
                                android:id="@+id/gujrati_relative"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/light_white">

                                <RelativeLayout
                                    android:id="@+id/gujrati_img_relative"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_alignParentEnd="true"
                                    android:visibility="gone">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_baseline_check_24" />
                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/gujrati_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_centerInParent="true"
                                    android:textSize="@dimen/_14sdp"
                                    android:textColor="@color/black"
                                    android:text="@string/gujrati"
                                    android:fontFamily="@font/proxima_nova_alt_bold"/>

                            </RelativeLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/_5sdp">

                            <RelativeLayout
                                android:id="@+id/tamil_relative"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/light_white">

                                <RelativeLayout
                                    android:id="@+id/tamil_img_relative"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_alignParentEnd="true"
                                    android:visibility="gone">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_baseline_check_24" />
                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/tamil_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_centerInParent="true"
                                    android:textSize="@dimen/_14sdp"
                                    android:textColor="@color/black"
                                    android:text="@string/tamil"
                                    android:fontFamily="@font/proxima_nova_alt_bold"/>

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/_5sdp">

                            <RelativeLayout
                                android:id="@+id/telgu_relative"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/light_white">
                                <RelativeLayout
                                    android:id="@+id/telgu_img_relative"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_alignParentEnd="true"
                                    android:visibility="gone">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_baseline_check_24" />
                                </RelativeLayout>


                                <TextView
                                    android:id="@+id/telgu_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_centerInParent="true"
                                    android:textSize="@dimen/_14sdp"
                                    android:textColor="@color/black"
                                    android:text="@string/telegu"
                                    android:fontFamily="@font/proxima_nova_alt_bold"/>

                            </RelativeLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/_5sdp">

                            <RelativeLayout
                                android:id="@+id/kanada_relative"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/light_white">

                                <RelativeLayout
                                    android:id="@+id/kanada_img_relative"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_alignParentEnd="true"
                                    android:visibility="gone">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_baseline_check_24" />
                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/kanada_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:fontFamily="@font/proxima_nova_alt_bold"
                                    android:gravity="center"
                                    android:text="@string/kanada"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14sdp" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/_5sdp">

                            <RelativeLayout
                                android:id="@+id/malyalam_relative"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/light_white">

                                <RelativeLayout
                                    android:id="@+id/malyalam_img_relative"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_alignParentEnd="true"
                                    android:visibility="gone">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_baseline_check_24" />
                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/malyalam_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_centerInParent="true"
                                    android:textSize="@dimen/_14sdp"
                                    android:textColor="@color/black"
                                    android:text="@string/malayalam"
                                    android:fontFamily="@font/proxima_nova_alt_bold"/>

                            </RelativeLayout>
                        </LinearLayout>


                    </LinearLayout>


                    <TextView
                        android:id="@+id/continue_Btn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@drawable/green_round_bg"
                        android:fontFamily="@font/proxima_nova_alt_bold"
                        android:gravity="center"
                        android:text="Continue"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_14sdp" />

                         </LinearLayout>

                     </ScrollView>
                 </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>